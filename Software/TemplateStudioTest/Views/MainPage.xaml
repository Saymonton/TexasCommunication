<Page
    x:Class="TemplateStudioTest.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">

        <Expander Width="250" VerticalAlignment="Top">
            <Expander.Header>
                <TextBlock x:Uid="COM_Config" />
            </Expander.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Port Name" />
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="100"
                    DropDownOpened="ComboBoxPortNames_DropDownOpened"
                    ItemsSource="{Binding PortNames}"
                    SelectedItem="{Binding SelectedPortName}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Baud Rate" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    ItemsSource="{Binding BaudRates}"
                    SelectedItem="{Binding SelectedBaudRate}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Data Bits" />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    ItemsSource="{Binding DataBits}"
                    SelectedItem="{Binding SelectedDataBits}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Parity" />
                <ComboBox
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    ItemsSource="{Binding Parities}"
                    SelectedItem="{Binding SelectedParity}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="StopBits" />
                <ComboBox
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    ItemsSource="{Binding StopBits}"
                    SelectedItem="{Binding SelectedStopBits}" />
                <Button
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="{StaticResource XSmallTopMargin}"
                    Command="{Binding ConnectCOMCommand}"
                    Content="{Binding BtnConnectText}" />
            </Grid>
        </Expander>


    </Grid>
</Page>
