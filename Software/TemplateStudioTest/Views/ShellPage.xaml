<Page
    x:Class="TemplateStudioTest.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:TemplateStudioTest.Helpers"
    xmlns:converters="using:TemplateStudioTest.Helpers"
    xmlns:behaviors="using:TemplateStudioTest.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    Loaded="OnLoaded">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolInverterConverter x:Key="BoolInverterConverter" />
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1000"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- ícone -->
                <ColumnDefinition Width="*" />
                <!-- drag/título -->
                <ColumnDefinition Width="Auto" />
                <!-- combo -->
            </Grid.ColumnDefinitions>

            <!-- ÁREA DE ARRASTO (title bar de verdade) -->
            <Border x:Name="DragRegion"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="Transparent" />

            <Image Grid.Column="0"
                   Source="/Assets/WindowIcon.ico"
                   HorizontalAlignment="Left"
                   Width="16"
                   Height="16"
                   Margin="6,0,6,0" />

            <TextBlock x:Name="AppTitleBarText"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Text="Meu App" />

            <!-- Fora da área de arrasto -->
            <Button Grid.Column="2"
                    Margin="0, 0, 150, 0"
                    Content="COM Configurations">
                <Button.Flyout>
                    <Flyout Placement="TopEdgeAlignedRight">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Text="Port Name" />
                            <ComboBox Grid.Row="0"
                                      Grid.Column="2"
                                      Width="100"
                                      DropDownOpened="ComboBoxPortNames_DropDownOpened"
                                      IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                                      ItemsSource="{Binding PortNames}"
                                      SelectedItem="{Binding SelectedPortName, Mode=TwoWay}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Text="Baud Rate" />
                            <ComboBox Grid.Row="1"
                                      Grid.Column="2"
                                      Width="100"
                                      Margin="{StaticResource XSmallTopMargin}"
                                      IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                                      ItemsSource="{Binding BaudRates}"
                                      SelectedItem="{Binding SelectedBaudRate, Mode=TwoWay}" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Text="Data Bits" />
                            <ComboBox Grid.Row="2"
                                      Grid.Column="2"
                                      Width="100"
                                      Margin="{StaticResource XSmallTopMargin}"
                                      IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                                      ItemsSource="{Binding DataBits}"
                                      SelectedItem="{Binding SelectedDataBits, Mode=TwoWay}" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Text="Parity" />
                            <ComboBox Grid.Row="3"
                                      Grid.Column="2"
                                      Width="100"
                                      Margin="{StaticResource XSmallTopMargin}"
                                      IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                                      ItemsSource="{Binding Parities}"
                                      SelectedItem="{Binding SelectedParity, Mode=TwoWay}" />
                            <TextBlock Grid.Row="4"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Text="StopBits" />
                            <ComboBox Grid.Row="4"
                                      Grid.Column="2"
                                      Width="100"
                                      Margin="{StaticResource XSmallTopMargin}"
                                      IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                                      ItemsSource="{Binding StopBits}"
                                      SelectedItem="{Binding SelectedStopBits, Mode=TwoWay}" />
                            <Button Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Margin="{StaticResource XSmallTopMargin}"
                                    Command="{Binding ConnectCOMCommand}"
                                    Content="{Binding BtnConnectText}" />
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </Button>

        </Grid>
        <NavigationView
            x:Name="NavigationViewControl"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Visible"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            IsSettingsVisible="True"
            ExpandedModeThresholdWidth="1280"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            Header="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
            <NavigationView.MenuItems>
                <!--
                TODO: Update item titles by updating <x:Uid>.Content entries in Strings/en-us/Resources.resw.
                https://docs.microsoft.com/windows/uwp/app-resources/localize-strings-ui-manifest#refer-to-a-string-resource-identifier-from-xaml
            
                TODO: Update item icons by updating FontIcon.Glyph properties.
                https://docs.microsoft.com/windows/apps/design/style/segoe-fluent-icons-font#icon-list
                -->
                <NavigationViewItem x:Uid="Shell_Main" helpers:NavigationHelper.NavigateTo="TemplateStudioTest.ViewModels.MainViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE80F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_LedControl"
                                    helpers:NavigationHelper.NavigateTo="TemplateStudioTest.ViewModels.LedControlViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xE781;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_HexCommunication"
                                    helpers:NavigationHelper.NavigateTo="TemplateStudioTest.ViewModels.HexCommunicationViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xE756;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock
                            Text="{Binding}"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior
                    DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    Text="{Binding}"
                                    Style="{ThemeResource TitleTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>
            <Grid Margin="{StaticResource NavigationViewPageContentMargin}">
                <Frame x:Name="NavigationFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Page>
