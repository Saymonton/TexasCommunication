<Page
    x:Class="TemplateStudioTest.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TemplateStudioTest.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolInverterConverter x:Key="BoolInverterConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Expander Width="250" VerticalAlignment="Top">
            <Expander.Header>
                <TextBlock x:Uid="COM_Config" />
            </Expander.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Port Name" />
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="100"
                    DropDownOpened="ComboBoxPortNames_DropDownOpened"
                    IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                    ItemsSource="{Binding PortNames}"
                    SelectedItem="{Binding SelectedPortName, Mode=TwoWay}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Baud Rate" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                    ItemsSource="{Binding BaudRates}"
                    SelectedItem="{Binding SelectedBaudRate, Mode=TwoWay}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Data Bits" />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                    ItemsSource="{Binding DataBits}"
                    SelectedItem="{Binding SelectedDataBits, Mode=TwoWay}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Parity" />
                <ComboBox
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                    ItemsSource="{Binding Parities}"
                    SelectedItem="{Binding SelectedParity, Mode=TwoWay}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="StopBits" />
                <ComboBox
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="100"
                    Margin="{StaticResource XSmallTopMargin}"
                    IsEnabled="{Binding IsSerialConnected, Converter={StaticResource BoolInverterConverter}}"
                    ItemsSource="{Binding StopBits}"
                    SelectedItem="{Binding SelectedStopBits, Mode=TwoWay}" />
                <Button
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="{StaticResource XSmallTopMargin}"
                    Command="{Binding ConnectCOMCommand}"
                    Content="{Binding BtnConnectText}" />
            </Grid>
        </Expander>

        <StackPanel
            Grid.Row="2"
            Margin="{StaticResource MediumTopBottomMargin}"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="100">
            <StackPanel>
                <Button
                    Command="{Binding LedClickCommand}"
                    CommandParameter="0"
                    IsEnabled="{Binding IsSerialConnected}">
                    <FontIcon
                        FontSize="64"
                        Foreground="{Binding Led_0_Foreground, Mode=TwoWay}"
                        Glyph="&#xE781;" />
                </Button>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="0" />
            </StackPanel>
            <StackPanel>
                <Button
                    Command="{Binding LedClickCommand}"
                    CommandParameter="1"
                    IsEnabled="{Binding IsSerialConnected}">
                    <FontIcon
                        FontSize="64"
                        Foreground="{Binding Led_1_Foreground}"
                        Glyph="&#xE781;" />
                </Button>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="1" />
            </StackPanel>

            <StackPanel>
                <Button
                    Command="{Binding LedClickCommand}"
                    CommandParameter="2"
                    IsEnabled="{Binding IsSerialConnected}">
                    <FontIcon
                        FontSize="64"
                        Foreground="{Binding Led_2_Foreground}"
                        Glyph="&#xE781;" />
                </Button>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="2" />
            </StackPanel>

            <StackPanel>
                <Button
                    Command="{Binding LedClickCommand}"
                    CommandParameter="3"
                    IsEnabled="{Binding IsSerialConnected}">
                    <FontIcon
                        FontSize="64"
                        Foreground="{Binding Led_3_Foreground}"
                        Glyph="&#xE781;" />
                </Button>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="3" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
